# ===========================================
# TaskForge Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values.

# Database
DATABASE_URL=postgresql://taskforge:taskforge@localhost:5432/taskforge

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-in-production

# OAuth Providers (optional â€” leave empty to disable)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# MinIO / S3 Storage
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=taskforge
S3_ACCESS_KEY=taskforge
S3_SECRET_KEY=taskforge
S3_REGION=us-east-1

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MAIN_DOMAIN=taskforge.dev
NODE_ENV=development

# AI / Gemini
GEMINI_API_KEY=your-gemini-api-key

# Traefik (production)
DOMAIN=localhost
ACME_EMAIL=
TRAEFIK_LOG_LEVEL=INFO
