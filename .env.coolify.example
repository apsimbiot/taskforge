# ===========================================
# TaskFlow — Coolify Environment Variables
# ===========================================
# Set these in Coolify's Environment Variables UI.
# Variables marked REQUIRED must be set before deploying.

# ---- REQUIRED ----

# Your full app URL including https:// (Coolify handles SSL)
NEXTAUTH_URL=https://app.taskflow.dev

# Your base domain (without protocol) — used for subdomain routing
MAIN_DOMAIN=taskflow.dev

# Auth secret — generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# ---- RECOMMENDED (change defaults for security) ----

# PostgreSQL password
POSTGRES_PASSWORD=change_me_to_something_secure

# MinIO credentials
MINIO_ROOT_USER=taskflow
MINIO_ROOT_PASSWORD=change_me_to_something_secure

# ---- OPTIONAL ----

# Gemini AI key (for AI task generation)
GEMINI_API_KEY=

# OAuth providers
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# Email (Resend)
RESEND_API_KEY=
EMAIL_FROM=notifications@taskflow.dev
